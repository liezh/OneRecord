<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liezh.onerecord"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddRecord" >
        </activity>
        <activity android:name=".EditRecord" >
        </activity>
        <activity
            android:name=".NoteBookActivity"
            android:label="@string/title_activity_note_book" >
        </activity>
        <activity
            android:name=".RecoveryActivity"
            android:label="@string/title_activity_recovery" >
        </activity>
        <activity
            android:name=".CloudActivity"
            android:label="@string/title_activity_cloud" >
        </activity>
        <activity
            android:name=".ThemeActivity"
            android:label="@string/title_activity_theme" >
        </activity>
        <activity
            android:name=".NoteBookCatalogActivity"
            android:label="@string/title_activity_note_book_catalog" >
        </activity>
    </application>

</manifest>